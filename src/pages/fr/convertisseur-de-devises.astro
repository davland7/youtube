---
import Layout from '@layouts/Layout.astro';
import App from '@preact/CurrencyConverter/App';
import NavBar from '@preact/NavBar';
import { Content as README } from '@preact/CurrencyConverter/README.md';
---

<Layout
	title="Convertiseur de devises"
	description="Convertiseur de devises"
>
  <NavBar client:load />
  <main class="flex w-full">
    <aside class="hidden desktop:fixed desktop:bottom-0 desktop:right-[62%] desktop:flex desktop:justify-end w-full desktop:w-[38%]">
      <App client:load />
    </aside>
    <section class="flex w-full desktop:w-[62%] desktop:ml-[38%]">
      <article class="w-full desktop:max-w-screen-md p-6 prose-base prose-h1:mt-3 prose-a:text-blue-600">
        <README />
      </article>
    </section>
  </main>
</Layout>
