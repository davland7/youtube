---
import Layout from '@layouts/Layout.astro';
import ToggleMobileMenu from '@components/ToggleMobileMenu';
import App from '@components/CurrencyConverter/App.tsx';
import { Content } from '@components/CurrencyConverter/README.md';
---

<Layout
	title="Convertiseur de devises"
	description="Convertiseur de devises"
>
  <ToggleMobileMenu client:visible />
  <main class="flex w-full h-full">
    <aside class="flex flex-[1_1_38%] justify-end lg:w-[38%] overflow-y-auto">
      <div class="flex flex-col justify-between w-full lg:max-w-[488px]">
        <a href="/" class="flex items-center justify-center w-10 h-10 m-1">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
            <path d="M11.47 3.84a.75.75 0 011.06 0l8.69 8.69a.75.75 0 101.06-1.06l-8.689-8.69a2.25 2.25 0 00-3.182 0l-8.69 8.69a.75.75 0 001.061 1.06l8.69-8.69z" />
            <path d="M12 5.432l8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 01-.75-.75v-4.5a.75.75 0 00-.75-.75h-3a.75.75 0 00-.75.75V21a.75.75 0 01-.75.75H5.625a1.875 1.875 0 01-1.875-1.875v-6.198a2.29 2.29 0 00.091-.086L12 5.43z" />
          </svg>
        </a>
        <App client:load />
      </div>
    </aside>
    <section class="lg:w-[62%] t-0 hidden lg:flex lg:flex-[1_1_62%] overflow-y-auto">
      <article class="w-full max-w-[792px] p-6 mt-12 prose-base prose-h1:mt-3 prose-a:text-blue-600">
        <Content />
      </article>
    </section>
  </main>
</Layout>
