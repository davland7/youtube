---
import Layout from '@layouts/Layout.astro';
import App from '@components/CurrencyConverter/App.tsx';
import { Content } from '@components/CurrencyConverter/README.md';
import NavBar from '@components/NavBar';
---

<Layout
	title="Convertiseur de devises"
	description="Convertiseur de devises"
>
  <NavBar client:load />
  <main class="flex m-auto w-full max-w-screen-2xl">
    <aside class="hidden lg:flex lg:flex-[1_1_38%] justify-end lg:w-[38%]">
      <div class="flex flex-col justify-center w-full lg:max-w-[488px]">
        <App client:load />
      </div>
    </aside>
    <section class="flex lg:flex-[1_1_62%] lg:w-[62%]">
      <article class="w-full max-w-[792px] p-6 prose-base prose-h1:mt-3 prose-a:text-blue-600">
        <Content />
      </article>
    </section>
  </main>
</Layout>
