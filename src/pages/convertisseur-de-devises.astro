---
import Layout from '@layouts/Layout.astro';
import CurrencyConverter from '@components/CurrencyConverter/CurrencyConverter';
import NavBar from '@components/NavBar';
import { Content as README } from '@components/CurrencyConverter/README.md';
---

<Layout
	title="Convertiseur de devises"
	description="Convertiseur de devises"
>
  <NavBar codeUrl="https://github.com/davland7/youtube/tree/main/src/components/CurrencyConverter" client:load />
  <main class="flex md:flex-col w-full">
    <aside class="hidden md:inline xl:fixed bottom-0 right-[62%] xl:flex justify-end w-full xl:w-[38%]">
      <CurrencyConverter client:load />
    </aside>
    <section class="flex flex-col w-full xl:w-[62%] xl:ml-[38%]">
      <article class="w-full md:max-w-screen-md md:m-auto xl:m-0 p-6 prose-base prose-a:text-yellow-500 prose-table:w-full prose-table:bg-white prose-table:border prose-table:border-gray-300 prose-th:bg-gray-100 prose-tr:border prose-tr:bg-gray-100 prose-th:border prose-th:p-2 prose-td:border prose-td:p-2">
        <README />
      </article>
    </section>
  </main>
</Layout>
