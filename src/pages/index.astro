---
import Layout from '@layouts/Layout.astro';
import Newsletter from '@components/Newsletter.astro';
---

<Layout
  title="David Landry"
  description="Bienvenue sur mon site">
  <div class="m-auto max-w-lg">
    <Newsletter />
    <main class="flex flex-col items-center justify-center">
      <h2 class="mb-6 text-2xl font-bold text-center">
        Pages
      </h2>
      <ul class="mb-6 list-disc text-lg">
        <li>
          <a href="/convertisseur-de-devises" class="text-yellow-500 underline hover:no-underline">
            Convertisseur de devises
          </a>
        </li>
      </ul>
    </main>
    <footer class="flex justify-center m-12">
      <a href="https://www.youtube.com/@davland7" target="_blank">
        <img class="block dark:hidden w-[128px]" src="/images/yt_logo_rgb_light.png" alt="YouTube Logo" />
        <img class="hidden dark:block w-[128px]" src="/images/yt_logo_rgb_dark.png" alt="YouTube Logo" />
      </a>
    </footer>
  </div>
</Layout>
