---
import Layout from '@layouts/Layout.astro';
import Footer from '@components/Footer.astro';
---

<Layout
  title="David Landry"
  description="Bienvenue sur mon site">
	<main class="sm:fixed sm:top-0 sm:right-0 sm:bottom-0 sm:left-0 landscape:static flex flex-col items-center justify-center">
    <form action="/" name="newsletter" data-netlify="true" netlify-honeypot="bot-field" hidden>
      <input type="email" name="email" />
    </form>
    <div class="text-center mb-6">
      <h2 class="text-2xl font-bold mb-2">Pages</h2>
      <ul class="flex flex-col items-center justify-center space-y-4">
        <li>
          <a href="/convertisseur-de-devises" class="my-2 text-yellow-500 underline hover:no-underline">Convertisseur de devises</a>
        </li>
      </ul>
    </div>
	</main>
</Layout>
