{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["./components/*"],
      "@layouts/*": ["./layouts/*"],
      "@partials/*": ["./partials/*"],
    },
    "types": [
      "astro/client",
      "jest",
    ],
    "verbatimModuleSyntax": false
  }
}
